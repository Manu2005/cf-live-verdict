{
  "manifest_version": 3,
  "name": "CF Live Verdict",
  "version": "1.0.1",
  "description": "Live Codeforces verdicts with queue estimation and direct submission access",

  "permissions": ["storage"],
  "host_permissions": ["https://codeforces.com/*"],

  "background": {
    "service_worker": "background/api.js",
    "type": "module"
  },

  "content_scripts": [
    {
      "matches": ["https://codeforces.com/*"],
      "js": ["content/content.js"],
      "css": ["styles.css"]
    }
  ],

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
